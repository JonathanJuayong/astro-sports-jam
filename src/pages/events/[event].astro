---
import MainLayout from '../../components/layout/MainLayout.astro'
import Button from '../../components/Button.astro'

export function getStaticPaths() {
  return [
    {
      params: { event: 'sports-jam-2024' },
    },
    {
      params: { event: 'sports-jam-2020' },
    },
    {
      params: { event: 'sports-jam-2018' },
    },
  ]
}

const { event } = Astro.params
---

<MainLayout title="Event">
  <div
    class="relative container min-h-screen px-4 py-20 mx-auto gap-20 flex flex-col justify-stretch xl:justify-center xl:flex-row"
  >
    <div class="xl:min-w-max border xl:self-start p-6 rounded-xl space-y-8">
      <h1 class="font-heading text-3xl xs:text-4xl md:text-5xl font-bold">
        Sports Jam 2024
      </h1>
      <ul>
        <li class="mb-2 text-gray-600 flex items-start gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M8 2v4"> </path>
            <path d="M16 2v4"> </path>
            <rect width="18" height="18" x="3" y="4" rx="2"> </rect>
            <path d="M3 10h18"> </path>
            <path d="M8 14h.01"> </path>
            <path d="M12 14h.01"> </path>
            <path d="M16 14h.01"> </path>
            <path d="M8 18h.01"> </path>
            <path d="M12 18h.01"> </path>
            <path d="M16 18h.01"> </path>
          </svg>
          20 Sep 2024
        </li>
        <li class="mb-2 text-gray-600 flex items-start gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-clock-5"
          >
            <circle cx="12" cy="12" r="10"> </circle>
            <polyline points="12 6 12 12 14.5 16"> </polyline>
          </svg>
          11am to 4pm
        </li>
        <li class="mb-2 text-gray-600 flex items-start gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-map-pin min-w-[20px]"
          >
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"> </path>
            <circle cx="12" cy="10" r="3"> </circle>
          </svg>
          Hibiscus Sports Complex, 90 Klumpp Rd, Upper Mount Gravatt.
        </li>
      </ul>
      <form>
        <div class="mb-6">
          <label class="block mb-2 text-sm text-gray-900 font-semibold" for="">
            Name
          </label>
          <input
            class="w-full py-3 px-4 text-sm text-gray-900 placeholder-gray-400 border border-gray-200 focus:border-purple-500 focus:outline-purple rounded-lg"
            type="text"
            name="field-name"
            placeholder="Full Name"
            required
          />
        </div>
        <div class="mb-6">
          <label class="block mb-2 text-sm text-gray-900 font-semibold" for="">
            Email
          </label>
          <input
            class="w-full py-3 px-4 text-sm text-gray-900 placeholder-gray-400 border border-gray-200 focus:border-purple-500 focus:outline-purple rounded-lg"
            type="text"
            name="field-name"
            placeholder="name@email.com"
            required
          />
        </div>
        <div class="mb-6">
          <label class="block mb-2 text-sm text-gray-900 font-semibold" for="">
            # of Participants
          </label>
          <input
            class="w-full py-3 px-4 text-sm text-gray-900 placeholder-gray-400 border border-gray-200 focus:border-purple-500 focus:outline-purple rounded-lg"
            type="number"
            name="field-name"
            min="0"
            max="10"
            required
          />
        </div>
        <Button class="w-full mt-8" text="Submit" />
      </form>
    </div>
    <div class="xl:max-w-3xl">
      <p class="font-heading text-2xl xs:text-3xl md:text-4xl font-bold mb-8">
        About the <span class="font-serif italic">Event</span>
      </p>
      <p class="text-gray-600 leading-9 text-lg mb-6">
        Welcome to Sports Jam 2024, an exhilarating event where kids can explore
        a multitude of sports all in one place! Join us for a day filled with
        excitement and discovery as children have the opportunity to try their
        hand at various sports, from soccer and basketball to tennis and
        gymnastics.
      </p>
      <p class="text-gray-600 leading-9 text-lg mb-6">
        Sports Jam 2024 is the ultimate playground for young athletes to
        experience the thrill of different sports and find their passion. Our
        expert coaches and instructors will be on hand to guide and inspire,
        ensuring every child has a blast and learns something new. Don't miss
        this chance to ignite a love for sports and active living at Sports Jam
        2024!
      </p>
    </div>
  </div>
</MainLayout>

<script>
  const form = document.querySelector('form') as HTMLFormElement
  form.addEventListener('submit', (e) => {
    e.preventDefault()
  })
</script>
